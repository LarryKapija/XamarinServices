<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinServices.Views.EffectPage"
             xmlns:effects="clr-namespace:XamarinServices.Effects"
             Title="Effect">

    <Grid ColumnDefinitions="*,*" RowDefinitions="*,*,*" Padding="10,0">
        <Entry Placeholder="Press me please!!"  
               Grid.ColumnSpan="3" 
               VerticalOptions="Center" 
               Grid.Row="1" 
               >

            <Entry.Effects>
                <effects:FocusedEffect/>
            </Entry.Effects>
            </Entry>
    </Grid>

</ContentPage>